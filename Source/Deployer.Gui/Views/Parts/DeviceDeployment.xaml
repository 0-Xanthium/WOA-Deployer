<UserControl x:Class="Deployer.Gui.Views.Parts.DeviceDeployment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Deployer.Gui.Views.Parts"
             xmlns:core="clr-namespace:Deployer.Core;assembly=Deployer.Core"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Margin="8">
            <TextBlock Margin="7">Selected Device:</TextBlock>
            <Button DockPanel.Dock="Right" Margin="4" Command="{Binding FetchDevices}" VerticalAlignment="Center">Load</Button>

            <ComboBox VerticalAlignment="Center" ItemsSource="{Binding Deployments}"
                      SelectedItem="{Binding Deployment, Mode=TwoWay}" HorizontalContentAlignment="Stretch">

                <ComboBox.ItemTemplate>
                    <DataTemplate DataType="core:Deployment">
                        <StackPanel Height="50" Orientation="Horizontal" ToolTip="{Binding Description}">
                            <Image Source="{Binding Icon}" />
                            <TextBlock Text="{Binding Title}" VerticalAlignment="Center" Margin="4" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </DockPanel>
        <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4" Padding="5" Command="{Binding Deploy}">Deploy</Button>
    </Grid>
</UserControl>
